<Window x:Class="Project86Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project86Launcher"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ContentRendered="MainWindow_OnContentRendered"
        Title="Launcher" Height="576" Width="1080">
    <Grid>
        <Image Stretch="UniformToFill" Source="images/temporaryImage.png"/>
        <TextBlock Name="VersionText" VerticalAlignment="Bottom" HorizontalAlignment="Right" FontSize="20" Foreground="White" Margin="0, 0, 5, 0"></TextBlock>
        <Button Name="PlayButton" Content="Checking for updates" Click="PlayButton_OnClick" Height="60" FontSize="28" FontWeight="Bold" Background="MediumPurple" Foreground="#DDFFFFFF" Padding="5, 0, 5, 0" Margin="0, 0, 0, 15" VerticalAlignment="Bottom" HorizontalAlignment="Center"></Button>
        
    </Grid>
</Window>
